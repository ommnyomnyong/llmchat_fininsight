  const handleSend = () => {
    const t = text.trim();
    if (!t) return;
    const newMsg = { id: crypto.randomUUID(), role: "user", text: t, createdAt: nowISO() };

    // âœ… ì¦‰ì‹œ ë¡œì»¬ ë©”ì‹œì§€ì— ë°˜ì˜
    setLocalMessages((prev) => [...prev, newMsg]);
    setText("");

    // âœ… ë¶€ëª¨ì—ë„ ì „ë‹¬ (ë°±ì—”ë“œ ì—°ë™ìš©)
    onSend?.(t, model, deepResearch);

    // âœ… í…ŒìŠ¤íŠ¸ìš© AI ì‘ë‹µ ì‹œë®¬ë ˆì´ì…˜ (ì—†ìœ¼ë©´ ì£¼ì„ ì²˜ë¦¬ ê°€ëŠ¥)
    setTimeout(() => {
      const reply = {
        id: crypto.randomUUID(),
        role: "assistant",
        text: `AI ì‘ë‹µ: "${t}" ì˜ ë“¤ì—ˆìŠµë‹ˆë‹¤.`,
        createdAt: nowISO(),
      };
      setLocalMessages((prev) => [...prev, reply]);
    }, 800);
  };

  return (
    <div style={{ flex: 1, display: "grid", gridTemplateRows: "auto 1fr auto", height: "100%" }}>
      {/* ìƒë‹¨ë°” */}
      <div
